      }
    } catch (error) {
      console.error('íšŒì› ê²€ìƒ‰ ì˜¤ë¥˜:', error);
      showToast('error', 'íšŒì› ê²€ìƒ‰ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
